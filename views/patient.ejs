        <div class="twelve wide field">
          <input type="text" name="allergy" placeholder="eg:Sun allergy">
        </div>
        <div class="four wide field">
          <input type="text" name="drugallergy2" placeholder="eg:dust allergy">
        </div>
      </div>
    </div>
    
    <div class="two fields">
      <div class="field">
        <label>Blood Group</label>
        <select class="ui fluid dropdown" name="blood">
          <option value="">blood group</option>
      <option value="A+">A+</option>
      <option value="A-">A-</option>
      <option value="B+">B+</option>
      <option value="B-">B-</option>
